<div class="modal" tabindex="-1" id="CategoryModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="border p-3 mt-4">
                        @*<div asp-validation-summary="All "></div>*@
                        <div class="mb-3">
                            <label>Name</label>
                            <input type="text" placeholder="Name" class="form-control" id="Name"/>
                            @*<span asp-validation-for="Name" class="text-danger"></span>*@
                        </div>
                        <div class="mb-3">
                            <label>Display Order</label>
                            <input type="text" placeholder="Display Order" class="form-control" id="DOrder"/>
                            @*<span asp-validation-for="DisplayOrder" class="text-danger"></span>*@
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="AddCategory()" id="AddCategory">Save changes</button>
            </div>
        </div>
    </div>
</div>

<div>
    <input type="hidden" id="urlCategoryData" value="@Url.Action("Create", "Category")"/>
</div>

